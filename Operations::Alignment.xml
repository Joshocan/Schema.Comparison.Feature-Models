<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<featureModel>
	<properties>
		<graphics key="autolayoutconstraints" value="false"/>
		<graphics key="legendautolayout" value="true"/>
		<graphics key="showconstraints" value="true"/>
		<graphics key="showshortnames" value="false"/>
		<graphics key="layout" value="horizontal"/>
		<graphics key="showcollapsedconstraints" value="true"/>
		<graphics key="legendhidden" value="false"/>
		<graphics key="layoutalgorithm" value="1"/>
	</properties>
	<struct>
		<and abstract="true" mandatory="true" name="Operations::Alignment">
			<description>The process of keeping models synchronized and consistent through change propagation</description>
			<and abstract="true" mandatory="true" name="Change_Propagation">
				<description>Automatic transfer of changes between related models</description>
				<alt abstract="true" name="Representation">
					<description>How changes are represented during propagation</description>
					<and name="Delta_based">
						<description>Changes represented as differences between versions</description>
						<alt abstract="true" name="Delta_Type">
							<feature name="Structural_Delta">
								<description>Changes to model structure (classes, attributes)</description>
							</feature>
							<feature name="Operational_Delta">
								<description>Changes expressed as operations (add, modify)</description>
							</feature>
						</alt>
					</and>
					<feature name="Allowed_Update">
						<description>Types of updates that can be propagated</description>
					</feature>
				</alt>
				<and abstract="true" mandatory="true" name="Allowed_Update_Types">
					<alt abstract="true" name="Atomic_Updates">
						<description>Basic indivisible operations</description>
						<feature name="Insert">
							<description>Add new element</description>
						</feature>
						<feature name="Update">
							<description>Modify existing element</description>
						</feature>
						<feature name="Delete">
							<description>Remove element</description>
						</feature>
						<feature name="Rename">
							<description>Change element name</description>
						</feature>
						<feature name="Move">
							<description>Change element location</description>
						</feature>
						<feature name="Merge">
							<description>Combine elements</description>
						</feature>
						<feature name="Split">
							<description>Divide elements</description>
						</feature>
					</alt>
					<alt abstract="true" name="Complex_Updates">
						<description>Composite operations</description>
						<feature name="Sequence">
							<description>Ordered atomic updates</description>
						</feature>
						<feature name="Parallelism">
							<description>Concurrent atomic updates</description>
						</feature>
						<feature name="Contingency_plan">
							<description>Conditional update strategies</description>
						</feature>
					</alt>
				</and>
				<alt abstract="true" name="Propagation_Direction">
					<description>Direction of change flow</description>
					<feature name="Forward">
						<description>Source → Target models</description>
					</feature>
					<feature name="Backward">
						<description>Target → Source models</description>
					</feature>
					<feature name="Bidirectional">
						<description>Two-way propagation</description>
					</feature>
				</alt>
				<alt abstract="true" name="Propagation_Scope">
					<description>Range of affected models</description>
					<feature name="Local">
						<description>Limited set of models</description>
					</feature>
					<feature name="Global">
						<description>All related models</description>
					</feature>
				</alt>
				<alt abstract="true" name="Propagation_Policy">
					<description>Timing/conditions for propagation</description>
					<feature name="Immediate">
						<description>Apply changes instantly</description>
					</feature>
					<feature name="Deferred">
						<description>Batch changes later</description>
					</feature>
					<feature name="Conditional">
						<description>Apply only when criteria met</description>
					</feature>
				</alt>
			</and>
		</and>
	</struct>
</featureModel>
